{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 600,
    "view": {"fill": "#CBE5FC"},
    "title": "Life Expectancy 2015",
    "data":
      {
        "url": "js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
      {
        "transform": [
          {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "data/Life_Expectancy_Data_2015.csv"
              },
              "key": "Country",
              "fields": ["Life Expectancy"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "black"},
        "encoding": {
          "color": {
            "field": "Life Expectancy",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [60, 70, 80],
              "range": ["#E8DFC0", "#E6BF3A", "#C69E16", "#8B6D07"]
            },
            "legend": {
              "title": "Life Expectancy",
              "values": [0, 51, 60, 70, 80, 88]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Life Expectancy", "type": "quantitative"}
          ]
        }
      },
      {
        "data":{
          "url": "js/ne_110m.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "gray"}
      }
    ]
    
  }
